<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    android:background="@drawable/shape_rectangle_circle_side_bg"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_login_logo_bg2" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_above="@+id/nowComeIn"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pxLoginBtn"
                android:layout_width="110dp"
                android:layout_height="26dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_rectangle_circle_side_bg"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/color_333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/newUser"
                android:layout_width="110dp"
                android:layout_height="26dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/shape_rectangle_circle_side_bg"
                android:gravity="center"
                android:text="我是新用户"
                android:textColor="@color/color_333"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/login_hint_content"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nowComeIn"
            android:layout_width="@dimen/length_view_100dp"
            android:layout_height="26dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="马上进入"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>