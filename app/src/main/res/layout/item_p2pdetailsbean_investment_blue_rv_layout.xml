<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f8f8f8"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_view_40dp"
        android:background="#ffffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/schemeNumber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="投资方案1"
            android:textColor="@color/color_333" />

        <TextView
            android:id="@+id/proxyPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/color_333"
            android:textSize="10sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="#f8f8f8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="金额"
                android:textColor="@color/color_333"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="期限"
                android:textColor="@color/color_333"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="利息"
                android:textColor="@color/color_333"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="红包"
                android:textColor="@color/color_333"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="米财奖励"
                android:textColor="@color/color_333"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="总收益"
                android:textColor="@color/color_333"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="综合年化"
                android:textColor="@color/color_333"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="≥5000"
                android:textColor="@color/color_333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/term"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="19-32"
                android:textColor="@color/color_333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/accrual"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="0"
                android:textColor="@color/color_333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/redEnvelopes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="0"
                android:textColor="@color/color_333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/reward"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="0"
                android:textColor="#D1031C"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/totalIncome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="123"
                android:textColor="@color/color_333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/avgAnnualRate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="40.36%"
                android:textColor="@color/color_333"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/openText"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginBottom="1dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="点击展开详情"
        android:textColor="@color/color_999"
        android:textSize="10sp" />

    <LinearLayout
        android:id="@+id/projectDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/schemeNumber2"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:gravity="center"
            android:text="投资方案1"
            android:textColor="@color/color_333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/detailsContentItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:lineSpacingExtra="3dp"
            android:text="@string/blueDetails"
            android:textColor="@color/color_333"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>