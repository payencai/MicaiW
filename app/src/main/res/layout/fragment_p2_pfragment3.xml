<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/order_ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FEFEFE"
        android:orientation="vertical">

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/p2p_tab_layout_fund"
            android:layout_width="match_parent"
            android:layout_height="@dimen/length_view_40dp"
            android:layout_marginTop="@dimen/margin_7dp"
            android:background="#FEFEFE"
            app:tl_indicator_height="0dp"
            app:tl_textBold="SELECT"
            app:tl_textSelectColor="@color/blue_ed"
            app:tl_textUnselectColor="@color/tv_999"
            app:tl_textsize="14sp" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_fund"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>