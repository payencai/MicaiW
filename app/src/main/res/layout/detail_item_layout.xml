<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="213dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/grid_image"
                android:layout_width="122dp"
                android:layout_height="122dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:scaleType="centerCrop"
                android:src="@color/color_999" />

            <TextView
                android:id="@+id/deviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/grid_image"
                android:layout_below="@id/grid_image"
                android:layout_marginTop="3dp"
                android:text="R5800HD投影仪"
                android:textColor="@color/color_333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/grid_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/deviceName"
                android:layout_below="@id/deviceName"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="2000积分"
                android:textColor="#F5A623"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/relationService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="请联系客服兑换"
                android:textColor="@color/color_999"
                android:textSize="@dimen/text_size_10sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>