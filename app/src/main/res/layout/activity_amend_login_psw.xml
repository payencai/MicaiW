<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AmendLoginPswActivity">

    <include layout="@layout/include_title_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/boundPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="当前手机号：176****7788"
            android:textColor="@color/color_333"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_15dp"
        android:paddingRight="@dimen/margin_15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="原登录密码"
                android:textColor="@color/color_333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/primevalPassword"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_toRightOf="@id/text1"
                android:background="@color/white"
                android:hint="请输入原登录密码"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:background="@color/line_f8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="新登录密码"
                android:textColor="@color/color_333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/newPassword"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_toRightOf="@id/text2"
                android:background="@color/white"
                android:hint="请输入新登录密码"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginLeft="@dimen/size_text_18dp"
        android:layout_marginTop="8dp"
        android:text="@string/psw_string_hint"
        android:textColor="#999999"
        android:textSize="10sp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_rectangle_circle_blue"
        android:text="确认修改"
        android:textColor="#ffffff" />

</LinearLayout>