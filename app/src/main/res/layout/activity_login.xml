<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.micaiw.mobile.activity.LoginActivity">

    <include
        android:id="@+id/head"
        layout="@layout/include_title_head" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_below="@id/head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:src="@mipmap/logo" />

    <EditText
        android:id="@+id/editPhoneNumber"
        android:layout_width="@dimen/length_view_158dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="184dp"
        android:background="@null"
        android:hint="请输入手机号码"
        android:inputType="number"
        android:maxLength="11"
        android:textColor="#999999"
        android:textColorHint="#999999"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/text_size_14sp" />

    <ImageView
        android:id="@+id/findPasswordImg"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignBottom="@+id/editPhoneNumber"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/editPhoneNumber"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_find_psw" />

    <View
        android:id="@+id/view1"
        android:layout_width="170dp"
        android:layout_height="0.75dp"
        android:layout_below="@+id/editPhoneNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="@color/color_333" />

    <TextView
        android:id="@+id/obtianAuthCode"
        android:layout_width="@dimen/length_view_100dp"
        android:layout_height="@dimen/length_view_20dp"
        android:layout_below="@id/view1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="获取验证码"
        android:textColor="#4987ED"
        android:textSize="@dimen/text_size_14sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/editPswInput"
        android:layout_width="@dimen/length_view_158dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@null"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textColor="#999999"
        android:textColorHint="#999999"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/text_size_14sp" />

    <View
        android:id="@+id/view2"
        android:layout_width="170dp"
        android:layout_height="0.75dp"
        android:layout_below="@+id/editPswInput"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_333" />

    <Button
        android:id="@+id/submit"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="@drawable/shape_rectangle_circle_blue2"
        android:text="登录"
        android:textColor="#ffffff" />


    <TextView
        android:id="@+id/pswLogin"
        android:layout_width="@dimen/length_view_100dp"
        android:layout_height="@dimen/length_view_20dp"
        android:layout_above="@+id/layoutBottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="密码登录"
        android:textColor="@color/color_333"
        android:textSize="@dimen/text_size_14sp" />

    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_view_20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="41dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/QQLogin"
            android:layout_width="@dimen/length_view_20dp"
            android:layout_height="@dimen/length_view_20dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/ic_qq_logo" />

        <ImageView
            android:id="@+id/WXLogin"
            android:layout_width="@dimen/length_view_20dp"
            android:layout_height="@dimen/length_view_20dp"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/ic_weixin_logo" />
    </LinearLayout>


</RelativeLayout>
