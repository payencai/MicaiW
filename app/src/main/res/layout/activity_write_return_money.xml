<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.WriteReturnMoneyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <ImageView
                android:id="@+id/backImg"
                android:layout_width="24dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_text_12dp"
                android:scaleType="centerInside"
                android:src="@mipmap/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="填写内容"
                android:textColor="@color/color_333"
                android:textSize="16sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/titelImg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="#dddddd" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center"
            android:text="填写表格"
            android:textColor="@color/color_333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_item"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_endowment" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:text="投资资料"
                    android:textColor="@color/color_333"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:text="请确保准确无误"
                    android:textColor="@color/color_999"
                    android:textSize="10sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/line_f8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_item"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="投资账号"
                    android:textColor="@color/color_333"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/investorAccountInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/head"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入投资号码"
                    android:maxLines="1"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_size_14sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/line_f8" />

            <RelativeLayout
                android:id="@+id/selectPlatfrom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_item"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="投资平台"
                    android:textColor="@color/color_333"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/selectPlatformName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/text1"
                    android:gravity="center"
                    android:hint="请选择投资平台"
                    android:textColor="@color/color_333"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_arrows_right" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/line_f8" />

            <LinearLayout
                android:id="@+id/selectTimeLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_item"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="投资时间"
                    android:textColor="@color/color_333"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/investTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/head"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:hint="请输入投资时间"
                    android:maxLines="1"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/text_size_14sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/line_f8" />

            <LinearLayout
                android:id="@+id/schemeSelectLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_item"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="投资方案"
                    android:textColor="@color/color_333"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/schemeSelectText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/head"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:hint="请输入投资方案"
                    android:maxLines="1"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textSize="@dimen/text_size_14sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/line_f8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_item"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="投资金额"
                    android:textColor="@color/color_333"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/investMoneyEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/head"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入投资金额"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_size_14sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/line_f8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_item"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="微信/QQ "
                    android:textColor="@color/color_333"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/wxOrQqAccount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/head"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入微信/QQ"
                    android:maxLines="1"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_size_14sp" />


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/line_f8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_item"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_write_phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:text="奖励金额"
                    android:textColor="@color/color_333"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:text="请确保准确无误"
                    android:textColor="@color/color_999"
                    android:textSize="10sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:background="@color/line_f8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_height_item"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="奖励金额"
                    android:textColor="@color/color_333"
                    android:textSize="14sp" />


                <EditText
                    android:id="@+id/inputReturnMoney"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/head"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入返现金额"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="#999999"
                    android:textColorHint="#999999"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_size_14sp" />


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:background="@color/line_f8" />

        <RelativeLayout
            android:id="@+id/paySelectLayout"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="收款账号"
                android:textColor="@color/color_333"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_arrows_right" />

            <TextView
                android:id="@+id/shroffAccount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/img1"
                android:gravity="center"
                android:textColor="@color/color_333"
                android:textSize="@dimen/text_size_14sp" />

            <ImageView
                android:id="@+id/bankImg"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@id/shroffAccount"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:background="@color/line_f8" />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="36dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/shape_rectangle_circle_blue"
            android:text="提交"
            android:textColor="#FFFFFF" />

    </LinearLayout>


</ScrollView>