<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MCaiHeadlineActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <ImageView
            android:id="@+id/backImg"
            android:layout_width="24dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_text_12dp"
            android:scaleType="centerInside"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="米财头条"
            android:textColor="@color/color_333"
            android:textSize="16sp" />

    </RelativeLayout>

    <!--
      app:tabMode="scrollable" 设置TabLayout的显示模式,fixed表示固定，不可滚动，scrollable表示可滚动
      app:tabTextColor="@color/colorPrimary" 设置默认文本颜色
      app:tabSelectedTextColor="#ff0101" 选中文本颜色
      app:tabIndicatorColor="#deff05" 设置指示器的颜色
      app:tabIndicatorHeight="" 设置指示器的高度
      -->
    <android.support.design.widget.TabLayout
        android:id="@+id/lineTablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="#007bff" />

    <android.support.v4.view.ViewPager
        android:id="@+id/lineViewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>