<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="cn.micaiw.mobile.activity.MainActivity">

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!--底部导航栏-->
    <FrameLayout
        android:id="@+id/main_buttom_tabbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <!--首页-->
                <FrameLayout
                    android:id="@+id/main_home"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="32dp"
                    android:paddingRight="16dp">

                    <ImageView
                        android:id="@+id/main_iv_home"
                        android:layout_width="25dp"
                        android:layout_height="18dp"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="9dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/common_tab_normal" />

                    <TextView
                        android:id="@+id/main_tv_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="3dp"
                        android:gravity="center_vertical"
                        android:text="首页"
                        android:textColor="@color/tv_333"
                        android:textSize="10dp" />

                </FrameLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <!--首投-->
                <FrameLayout
                    android:id="@+id/main_first_order"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <ImageView
                        android:id="@+id/main_iv_first_order"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="5dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/common_tab_normal_st" />

                    <TextView
                        android:id="@+id/main_tv_first_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="3dp"
                        android:gravity="center_vertical"
                        android:text="首投"
                        android:textColor="@color/tv_333"
                        android:textSize="10dp" />

                </FrameLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <!--复投-->
                <FrameLayout
                    android:id="@+id/main_more_order"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <ImageView
                        android:id="@+id/main_iv_more_order"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="5dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/common_tab_normal_ft" />

                    <TextView
                        android:id="@+id/main_tv_more_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="3dp"
                        android:gravity="center_vertical"
                        android:text="复投"
                        android:textColor="@color/tv_333"
                        android:textSize="10dp" />

                </FrameLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <!--复投-->
                <FrameLayout
                    android:id="@+id/main_money_give"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <ImageView
                        android:id="@+id/main_iv_money_give"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="5dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/money_unselect" />

                    <TextView
                        android:id="@+id/main_tv_money_give"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="3dp"
                        android:gravity="center_vertical"
                        android:text="财富投"
                        android:textColor="@color/tv_333"
                        android:textSize="10dp" />

                </FrameLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone">
                <!--银行-->
                <FrameLayout
                    android:id="@+id/main_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <ImageView
                        android:id="@+id/main_iv_bank"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="5dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/common_tab_normal_yh" />

                    <TextView
                        android:id="@+id/main_tv_bank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="3dp"
                        android:gravity="center_vertical"
                        android:text="银行"
                        android:textColor="@color/tv_333"
                        android:textSize="10dp" />

                </FrameLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <!--我的店铺-->
                <FrameLayout
                    android:id="@+id/main_user"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="32dp">

                    <ImageView
                        android:id="@+id/main_iv_user"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="5dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/common_tab_normal_wd" />

                    <TextView
                        android:id="@+id/main_tv_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="3dp"
                        android:gravity="center_vertical"
                        android:text="我的"
                        android:textColor="@color/tv_333"
                        android:textSize="10dp" />

                </FrameLayout>

            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="top"
            android:background="@color/tv_cc" />
    </FrameLayout>

</LinearLayout>
